package june23;

public class pattern2 {

	public static void main(String[] args) {
		pattern(1,1,1,5);

	}
	public static void pattern(int row,int col,int space,int n){
		if(row>n){
			return;
		}
		if(col>2*row-1){
			System.out.println();
			pattern(row+1,1,space,n);
			if(row<n-1){
				System.out.println();
			}
			return;
		}
		
		System.out.print("*");
		pattern(row,col+1,space,n);
		if(row<=n-1){
			System.out.print("*");
		}
		return;
	}

}
